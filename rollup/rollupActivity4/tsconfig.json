{
    "compilerOptions": {
      "target": "ESNext",                 // Use modern JavaScript features
      "module": "ESNext",                 // Use ES Module system
      "strict": true,                     // Enable all strict type checking options
      "esModuleInterop": true,            // Interop with CommonJS modules
      "skipLibCheck": true,               // Skip type checks of declaration files
      "forceConsistentCasingInFileNames": true,
      "moduleResolution": "node",         // Use Node.js module resolution
    },
    "include": ["src/**/*"],              // Include all files in src
    "exclude": ["node_modules", "dist"]   // Exclude unnecessary folders
}